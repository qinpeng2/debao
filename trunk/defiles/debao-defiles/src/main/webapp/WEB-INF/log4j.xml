<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd HH:mm:ss,SSS\} %-5p] [%t] %c{2\} - %m%n" />
		</layout>
	</appender>
	<appender name="CRITICAL-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/workspace/debao/debao-defiles/trunk/logs/debao.com/error.log" />
		<param name="append" value="true" />
		<param name="encoding" value="utf-8" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{loginUserEmail}/%X{loginUserID}/%X{remoteAddr}/%X{clientId} - %X{requestURIWithQueryString}] %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="DEBAO-DEFILES-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/workspace/debao/debao-defiles/trunk/logs/debao.com/ifund.log" />
		<param name="append" value="true" />
		<param name="encoding" value="utf-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd HH:mm:ss,SSS\} %-5p] [%t] %c{2\} - %m%n" />
		</layout>
	</appender>
	<logger name="com.debao.defiles" additivity="false">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="DEBAO-DEFILES-APPENDER" />
	</logger>
	<logger name="org.springframework.jdbc.core.JdbcTemplate"
		additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework.jdbc.core.StatementCreatorUtils"
		additivity="false">
		<level value="TRACE" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="org.mybatis" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="ldg.mybatis" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="console" />
	</logger>
	<logger name="com.mchange.v2" additivity="false">
		<level value="WARN" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework" additivity="true">
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="DEBAO-DEFILES-APPENDER" />
	</logger>
	<root>
		<priority value="debug" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="DEBAO-DEFILES-APPENDER" />
		<appender-ref ref="CRITICAL-APPENDER" />
	</root>
</log4j:configuration>